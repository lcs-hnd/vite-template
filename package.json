{
  "name": "vite-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint:js": "eslint 'src/**/*.js' --fix",
    "lint:css": "stylelint '**/*.css' --fix",
    "lint": "npm run lint:js --fix && npm run lint:css --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix:all": "npm run format && npm run lint",
    "watch": "concurrently \"eslint 'src/**/*.js' --watch --fix\" \"stylelint '**/*.css' --watch --fix\""
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.6.2",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-order": "^7.0.0",
    "vite": "^7.0.0"
  }
}
